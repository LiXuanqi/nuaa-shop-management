.category-icon {
    width: 25vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 8px;
    margin-bottom: 8px;
}
.icon-container {
    background-color: #fd9d21;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    text-align: center;
    line-height: 40px;
    display: block;
    margin-bottom: 8px;
}
.text {
    color: #666;
    text-align: center;
    font-size: 12px;
    font-weight: 400;
    line-height: 12px;
}