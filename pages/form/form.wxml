<view class="form-page">
    <view class="form-card">
        <view class="top-container">
            <view>
                <image class="pic" src="{{ pic }}" />
            </view>
            <view class="shop-name">
                教育超市
            </view>    
        </view>
        <form bindsubmit="formSubmit" bindreset="formReset">
            <zan-cell title="环境质量">
                <slider name="envMark" min="0" max="100" step="1" show-value ></slider>  
            </zan-cell>    
            <zan-cell title="服务态度">
                <slider name="serviceMark" min="0" max="100" step="1" show-value ></slider>  
            </zan-cell>   
            <zan-cell title="货品品质">
                <slider name="qualityMark" min="0" max="100" step="1" show-value ></slider>  
            </zan-cell>         
            <view class="input">
                <input name="content" placeholder="哪里不满意吗，写评论告诉我们"/>    
            </view>
            <view class="button">
                <button type="primary" formType="submit">提交</button>
            </view>
        
        </form>
    </view>
</view>