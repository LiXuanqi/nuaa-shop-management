<!--index.wxml-->
<view class="index-container">
    <header></header>
    <view class="categories-container">
        <category-icon icon="points" text="美食"></category-icon>
        <category-icon icon="logistics" iconColor="linear-gradient(120deg, #f6d365 0%, #fda085 100%)" text="文印"></category-icon>
        <category-icon icon="gift" text="杂货"></category-icon>
        <category-icon icon="wap-home" text="生活"></category-icon>
        <category-icon icon="free-postage" text="生活"></category-icon>
        <category-icon icon="shop-collect" text="生活"></category-icon>
        <category-icon icon="after-sale" text="生活"> </category-icon>
    </view>

    <view class="cards-container-title">
        <view class="slash"></view>
        <view class="text">
            附近商家
        </view>
        <view class="slash"></view>
    </view>

    <view class="cards-container"  wx:for="{{shopsList}}">     
        <shop-card
            sid="{{item.sid}}"
            name="{{item.name}}"
            intro="[{{item.address}}]{{item.intro}}"
            tel="{{item.tel}}"
            pic="{{item.pic}}"
            meanMark="{{item.meanMark}}"
        ></shop-card>
    </view>
    
</view>
